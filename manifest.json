{
	"name": "Rail Capture",
	"version": "0.4.1",
	"author": "Landon Gravat",
	"manifest_version": 2,
	"description": "Like ShareX, but for ChromeOS!",
	"offline_enabled": false,
	"developer": {
		"name": "Landon Gravat",
		"url": "https://railrunner16.me"
	},
	"default_locale": "en",
	
	"options_ui": {
		"page": "views/config.view.html",
		"open_in_tab": true,
		"browser_style": false
	},
	
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	
	"background": {
		"scripts": [
			"js/jquery.min.js",
			"js/dateformat.js",
			"js/background.js"
		],
		"persistent": false
	},
	
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": ["js/content.js"],
			"run_at": "document_end",
			"all_frames": true
		}
	],
	
	"browser_action": {
		"default_title": "Rail Capture",
		"default_icon": "img/icon.png"
	},
	
	"permissions": [
		"tabs",
		"activeTab",
		"clipboardWrite",
		"storage",
		"notifications",
		"<all_urls>"
	],

	"applications": {
		"gecko": {
			"id": "railcapture@railrunner16.me"
		}
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	
	"commands": {
		"take-screenshot": {
			"suggested_key": {
				"default": "Alt+Shift+L",
				"mac": "Alt+Shift+L",
				"chromeos": "Alt+Shift+K",
				"linux": "Alt+Shift+L"
			},
			"description": "Take a screenshot"
		}
	}
}